    @foreach (var genero in generosMusicales)
    {
        <MudTabPanel style="@($"""{(generomusicalSeleccionado == genero ? "color:#E74646;" : "")}font-size: 12px; border-radius: 10px; font-weight: bold;""")" ShowCloseIcon=false @onclick='()=>{generomusicalSeleccionado = genero;}' Text="@genero">
            <MetaMusic.Pages.Common_Components.TopByGenre genre="@genero"></MetaMusic.Pages.Common_Components.TopByGenre>
        </MudTabPanel>

    }

</MudTabs>
